  {
    "manifest_version": 3,
    "name": "Mist.AI",
    "description": "Ask Mist.AI anything, right-click text for help, or summarize any page.",
    "version": "1.5",
    "permissions": [
      "contextMenus",
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "mistaifaviocn/favicon-16x16.png",
        "32": "mistaifaviocn/favicon-32x32.png",
        "192": "mistaifaviocn/android-chrome-192x192.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
    "icons": {
      "16": "mistaifaviocn/favicon-16x16.png",
      "32": "mistaifaviocn/favicon-32x32.png",
      "192": "mistaifaviocn/android-chrome-192x192.png"
    }
  }