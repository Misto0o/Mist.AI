{
  "manifest_version": 2,
  "name": "Mist.AI",
  "description": "Ask Mist.AI anything or right-click highlighted text to get help.",
  "version": "1.3",
  "permissions": [
    "contextMenus",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["fireground.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "mistaifaviocn/favicon-16x16.png",
      "32": "mistaifaviocn/favicon-32x32.png",
      "192": "mistaifaviocn/android-chrome-192x192.png"
    }
  },
  "icons": {
    "16": "mistaifaviocn/favicon-16x16.png",
    "32": "mistaifaviocn/favicon-32x32.png",
    "192": "mistaifaviocn/android-chrome-192x192.png"
  },
  "applications": {
    "gecko": {
      "id": "crystal.cook07@gmail.com",
      "strict_min_version": "109.0"
    }
  }
}
