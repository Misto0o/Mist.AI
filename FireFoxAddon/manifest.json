{
  "manifest_version": 2,
  "name": "Mist.AI",
  "description": "Ask Mist.AI anything, right-click text for help, auto-fill forms, and answer questions.",
  "version": "2.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["fireground.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_popup": "popFire.html",
    "default_icon": {
      "16": "mistaifaviocn/favicon-16x16.png",
      "32": "mistaifaviocn/favicon-32x32.png",
      "192": "mistaifaviocn/android-chrome-192x192.png"
    }
  },
  "icons": {
    "16": "mistaifaviocn/favicon-16x16.png",
    "32": "mistaifaviocn/favicon-32x32.png",
    "192": "mistaifaviocn/android-chrome-192x192.png"
  },
  "applications": {
    "gecko": {
      "id": "crystal.cook07@gmail.com",
      "strict_min_version": "109.0"
    }
  }
}